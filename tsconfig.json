{
  "compilerOptions": {
    "lib": ["es2015", "es2016.array.include", "es2017.object"],
    "noEmit": true,
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "rootDirs": ["./src", "./__tests__"],
    "outDir": "./lib/",
    "allowJs": true,
    "checkJs": true
  },
  "types": ["node"],
  "include": ["./src/*", "./src/**/*.ts", "./__tests__/*.ts"],
  "exclude": ["./lib/*"]
}